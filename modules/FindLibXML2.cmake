FIND_PATH(LIBXML2_INCLUDE_DIR libxml /usr/include/libxml2 /usr/local/include/libxml2)
FIND_LIBRARY(LIBXML2_LIBRARY NAMES xml2 PATH /usr/lib /usr/local/lib)

IF (LIBXML2_INCLUDE_DIR AND LIBXML2_LIBRARY)
    SET(LIBXML2_FOUND TRUE)
ENDIF()

IF (LIBXML2_FOUND)
    IF (NOT LIBXML2_FIND_QUIETLY)
        MESSAGE(STATUS "Found Libxml2: ${LIBXML2_LIBRARY}")
    ENDIF()
ELSE (LIBXML2_FOUND)
    IF (LIBXML2_FIND_REQUIRED)
        MESSAGE(FATAL_ERROR "Could not find Libxml2 library")
    ENDIF()
ENDIF(LIBXML2_FOUND)
